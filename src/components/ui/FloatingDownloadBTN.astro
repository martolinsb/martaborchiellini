---
import CV from "@/assets/cv.pdf";
import { profile } from "@/settings";
---

<a
  href={CV}
  download={profile.fullName}
  aria-label="Download CV"
  class="btn btn-circle btn-secondary fixed bottom-6 right-6 shadow-lg transition-transform hover:scale-110 hover:shadow-xl"
>
  <!-- Download icon (Heroicon style) -->
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    class="h-6 w-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5 5-5M12 15V3"></path>
  </svg>
</a>
